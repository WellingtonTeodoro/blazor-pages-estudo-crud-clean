@page
@{
    Layout = null;
    var mensagemErro = TempData["ErrorMessage"] as string ?? "Erro desconhecido.";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Erro</title>
    <meta http-equiv="refresh" content="5;url=/Movies/Index" />
    <style>
        body { 
            font-family: Arial, sans-serif;
            padding: 2rem;
            text-align: center;
        }
    </style>
</head>
<body>
    <h1>Ocorreu um erro</h1>
    <p>@mensagemErro</p>
    <p>Você será redirecionado para a página inicial em 5 segundos...</p>
</body>
</html>
