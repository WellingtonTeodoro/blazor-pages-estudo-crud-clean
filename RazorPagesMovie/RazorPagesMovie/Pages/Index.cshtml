@page
@model IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="display-6">Filmes Cadastrados</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Cadastrar Novo Filme</a>
    <a href="/api/v1/movies" target="_blank" class="btn btn-outline-secondary ms-2">Ver JSON da API</a>
</p>

<table class="table table-striped table-hover mt-3">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Movie[0].Title)</th>
            <th>@Html.DisplayNameFor(model => model.Movie[0].ReleaseDate)</th>
            <th>@Html.DisplayNameFor(model => model.Movie[0].Genre)</th>
            <th>@Html.DisplayNameFor(model => model.Movie[0].Price)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Movie)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.ReleaseDate)</td>
                <td>@Html.DisplayFor(modelItem => item.Genre)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">Detalhes</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
